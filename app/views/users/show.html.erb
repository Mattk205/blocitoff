<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-6 col-lg-6">
      <h1><%= @user.username %> <small><%= link_to 'Edit profile', edit_user_registration_path, :class => 'link' %></small></h1>
      <p> Last log in occured on <%= @user.last_sign_in_at %></p>
    </div>
    <div class="col-sm-6 col-md-6 col-lg-6">
      <%= render 'items/form', review: Item.new(user_id: @user.id) %>
    </div>
  </div>
  <div class="row">
    <h2> My To-Do List</h2>
      <div class="list-container">
        <ul id='to-do-list' class="list-group">
          <%= render partial: 'items/item', collection: @items || "Lets start a To-Do List!"%>
        </ul>
      </div>
  </div>
</div>
